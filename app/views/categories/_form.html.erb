<%= form_for @c do |c| %> 
    <p> 
        <table>
            <tr> 
                <td> Category </td>
                <td> <%= c.text_field :name, :value=>  @c.name%> </td>
            </tr>
            <tr> 
                <td> Order </td>
                <td> <%= c.number_field :niceness, :value=>  @c.niceness%> </td>
            </tr>

        </table>
    </p>

    <p>
        <%= c.submit "#{@action}" %>
    </p> 

<% end %> 
